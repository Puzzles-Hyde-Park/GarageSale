.container.vcenter
  .row
    .col-md-4.col-md-offset-4
      %h1.text-center GarageSale
      .alert.alert-success= notice
      .alert.alert-danger= alert
  .row
    .col-md-4.col-md-offset-4
      %button.btn.btn-lg.btn-primary.btn-block{:id => "login-button", :type => "button", "data-toggle" => "collapse", "data-target" => "#login", "aria-expanded" => "false", "aria-controls" => "login"}
        Login
      .collapse#login
        .well
          = simple_form_for(:user, url: new_user_session_path) do |f|
            = f.text_field :login, class: "form-control", placeholder: "Enter your Email or Username", required: false, autofocus: true
            = f.password_field :password, class: "form-control", placeholder: "Enter your password", required: true
            = f.input :remember_me, as: :boolean if devise_mapping.rememberable?
            = f.submit "Get Sellin'", class: "btn btn-lg btn-success btn-block"

  .row.top-buffer
    .col-md-4.col-md-offset-4
      %button.btn.btn-lg.btn-primary.btn-block{:id => "sign-up-button", :type => "button", "data-toggle" => "collapse", "data-target" => "#sign-up", "aria-expanded" => "false", "aria-controls" => "sign-in"}
        Sign Up
      .collapse#sign-up
        .well
          = simple_form_for(:user, url: user_registration_path) do |f|
            - if devise_error_messages! != ""
              .alert.alert-danger= devise_error_messages!
            - else
            = f.text_field :username, placeholder: "Enter your username",class: "form-control", required: true, autofocus: true
            = f.email_field :email, placeholder: "Enter your Email",class: "form-control", required: true, autofocus: true
            = f.password_field :password, placeholder: "Enter your password", class: "form-control", required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length)
            = f.password_field :password_confirmation, class: "form-control", required: true
            = f.submit "Register", class: "btn btn-lg btn-success btn-block"
            -# = render "devise/shared/links"
  .row
    .col-md-4.col-md-offset-4
      - if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
        %br/
        = link_to "Forgot your password?", new_password_path(resource_name)
        %br/
