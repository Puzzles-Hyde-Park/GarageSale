.container
  .row
    .col-md-4.col-md-offset-4
      = link_to "Log In", new_user_session_path, class: "btn btn-lg btn-primary btn-block"
  .row
    .col-md-4.col-md-offset-4
      %button.btn.btn-lg.btn-primary.btn-block{:type => "button", "data-toggle" => "collapse", "data-target" => "#collapseExample", "aria-expanded" => "false", "aria-controls" => "collapseExample"}
        Sign Up
      .collapse#collapseExample
        .well
          = simple_form_for(:user, url: user_registration_path) do |f|

            = f.text_field :email, placeholder: "Enter you Email",class: "form-control", required: true, autofocus: true
            = f.password_field :password, placeholder: "Enter you password", class: "form-control", required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length)
            = f.password_field :password_confirmation, class: "form-control", required: true
            = f.submit "Register", class: "btn btn-lg btn-primary btn-block"
            -# = render "devise/shared/links"
