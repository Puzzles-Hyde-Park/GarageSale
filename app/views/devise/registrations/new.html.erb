<div id="fullscreen_bg" class="fullscreen_bg"></div>
  <div class="container">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), class: "form-signin") do |f| %>
            <%= f.error_notification %>
                <h1 class="form-signin-heading text-muted">Sign Up</h1>
                <%= f.input :email, required: true, class: "form-control", placeholder: "Email Address", autofocus: true %>
                <%= f.input :password, required: true, class: "form-control", placeholder: "Password" %>
                <%= f.input :password_confirmation, required: true, class: "form-control", placeholder: "Password" %>
                <%= f.button :submit, "Sign Up", required: true, class: "btn btn-lg btn-primary btn-block" %>
          <% end %>
          <%= render "devise/shared/links" %>
        </div>
        <div class="col-md-4"></div>
  </div>
</div>
