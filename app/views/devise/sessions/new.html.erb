<div id="fullscreen_bg" class="fullscreen_bg"/>

  <div class="container">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
                        class: "form-signin") do |f| %>
      <h1 class="form-signin-heading text-muted">Log in</h1>
        <%= f.text_field :email, class: "form-control", placeholder: "Enter you Email", required: false, autofocus: true %>
        <%= f.password_field :password, class: "form-control", placeholder: "Enter you password", required: false %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        <%= f.submit "Log In", class: "btn btn-lg btn-primary btn-block" %>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>

</div>
