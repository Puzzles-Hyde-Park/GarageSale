%nav.navbar.navbar-default
  .container-fluid
    / Brand and toggle get grouped for better mobile display
    .navbar-header
      %button.navbar-toggle.collapsed{"aria-expanded" => "false", "data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to 'Garage Sale', home_path, {:id => "brand-logo", :class => "navbar-brand"}
    / Collect the nav links, forms, and other content for toggling
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      %ul.nav.navbar-nav.navbar-right#main-nav
        %li
          = link_to('Sell Something', new_item_path)
        %li
          = link_to('Friends Sales', tips_path)
        -if !user_signed_in?
          %li
            = link_to 'Sign Up', new_user_registration_path
        %li.dropdown
          - if !user_signed_in?
            = link_to 'Log In', new_user_session_path
          - else
            %a.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#", :role => "button"}
              = "Welcome, " + current_user.username
              %span.caret
            %ul.dropdown-menu
              %li
                = link_to 'My Account', user_path(current_user.username)
              %li
                %a{:href => "#"} Tips & Safety
              %li.divider{:role => "separator"}
              %li
                = link_to 'Log Out', destroy_user_session_path, {:method => :delete}
    / /.navbar-collapse
  / /.container-fluid
